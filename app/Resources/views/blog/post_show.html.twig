{% extends 'base.html.twig' %}

{% block main %}
    <h1>{{ post.title }} </h1>
    <p>{% for i in 1..post.rating|round %}
            <span class="glyphicon glyphicon-star"></span>
        {% endfor %}
         Ratting {{ post.rating|round(1) }}</p>
    <p>Author: {{ post.authorEmail }} </p>
    <p><span class="glyphicon glyphicon-time"></span> Posted on {{ post.created.date|date("d F Y H:i:s") }}
        {{ 'post.num_comments'|transchoice(post.comments|length) }} </p>
    {% if post.imageName %}
        <img class="img-responsive" src={{ asset("#{post.imageName}") | imagine_filter('my_post') }} alt="foto" style="float: left">
    {% endif %}
    <p class="article">{{ post.content }}</p>
    <div id="post-add-comment" class="well">
        {% if is_granted('IS_AUTHENTICATED_FULLY') %}
            {{ render(controller('AppBundle:Blog:markNew', { 'post': post })) }}
            {{ render(controller('AppBundle:Blog:commentNew', { 'post': post })) }}
        {% else %}
            <p>
                <a class="btn btn-success" href="{{ path('security_login_form') }}">
                    <i class="fa fa-sign-in"></i> {{ 'action.sign_in'|trans }} </a>
                {{ 'post.to_publish_a_comment'|trans }}
            </p>
        {% endif %}
    </div>

    {{ 'post.num_comments'|transchoice(post.comments|length) }}
    {% for comment in pagination %}
        <div class="row post-comment">
            <h4 class="col-sm-3">
                <strong>{{ 'post.commented_on'|trans }}:<br>{{ comment.created.date|date("d F Y H:i:s") }} <br></strong>
                <strong>Author: {{ comment.authorEmail }}</strong>
            </h4>
            <div class="col-sm-9">
                <p class="article">{{ comment.content }}</p>

            </div>
        </div>
        {% if is_granted('edit', comment) %}
            <div class="section">
                <a href="{{ path('comment_edit', { commentId: comment.id, slug: post.slug }) }}" class="btn btn-primary btn-success">
                    <i class="fa fa-edit"></i> Edit this comment
                </a>
                <a href="{{ path('comment_delete', { commentId: comment.id, slug: post.slug }) }}" class="btn btn-primary btn-danger">
                    <i class="fa fa-edit"></i> Delete this comment
                </a>
            </div>
        {% endif %}

    {% endfor %}
    <div class="navigation">
        {{ knp_pagination_render(pagination) }}
    </div>
{% endblock %}


