{{ form_start(form, { method: 'POST', action: path('comment_new', { 'postSlug': post.slug }) }) }}
<fieldset>
    <legend>Додати коментар</legend>
    {{ form_errors(form) }}
    <div>
        {{ form_label(form.content, 'label.content', { label_attr: { class: 'hidden' }}) }}
        {{ form_errors(form.content) }}
        {{ form_widget(form.content, { attr: { rows: 5, cols: 112 } }) }}
    </div>

    <div class="form-group">
        <button class="btn btn-primary pull-left" type="submit">Зберегти</button>
    </div>
</fieldset>
{{ form_end(form) }}
