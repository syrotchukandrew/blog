{% extends 'admin/layout.html.twig' %}

{% block main %}
    <h1>Новий пост</h1>

    {{ form_start(form) }}
    {{ form_row(form.title) }}<br>
    {{ form_row(form.content) }}<br>
    {{ form_row(form.tags) }}<br>
    {{ form_row(form.image_file) }}<br>
    {{ form_row(form.videoId) }}<br>
    {{ form_end(form) }}

    <input type="submit" value="Створити пост" class="btn btn-primary"/>
    <a href="{{ path('admin_post_index') }}" class="btn btn-primary">
        Назад до переліку
    </a>
{% endblock %}

