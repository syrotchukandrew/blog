<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8"/>
    <title>{% block title %}My blog{% endblock title %}</title>

    {% block stylesheets %}
        <link rel="stylesheet" href="{{ asset('css/app.css') }}">
    {% endblock stylesheets %}
</head>

<body>

{% block header %}
    <header>
        <nav class="navbar navbar-inverse navbar-fixed-top">
            <div class="container-fluid">
                <div class="navbar-header">
                    <a class="navbar-brand" href="{{ path('homepage') }}">My blog</a>
                </div>
                <ul class="nav navbar-nav">
                    <li class="active"><a href="{{ path('homepage') }}">Homepage</a></li>
                </ul>
                <ul class="nav navbar-nav navbar-right">
                    <li>
                        {% if is_granted('ROLE_ADMIN') %}
                            <a href="{{ path('admin_post_index') }}"><span class="glyphicon glyphicon-user"></span>Administration</a>
                        {% endif %}
                    </li>
                    <li>
                        {% if is_granted('ROLE_ADMIN') or is_granted('ROLE_MODERATOR')%}
                            <a href="{{ path('blog_post_new') }}"><span class="glyphicon glyphicon-user"></span>New post</a>
                        {% endif %}
                    </li>
                    <li><a href="{{ path('user_registration') }}"><span class="glyphicon glyphicon-user"></span> Sign Up</a></li>
                    <li><a href="{{ path('security_login_form') }}"><span class="glyphicon glyphicon-log-in"></span> Login</a></li>
                    <li><a href="{{ path('security_logout') }}"><span class="glyphicon glyphicon-log-out"></span> Logout</a></li>
                </ul>
            </div>
        </nav>
    </header>
{% endblock header %}

<div class="container body-container">
    {% block body %}
        <div class="row">
            <div id="main" class="col-sm-9">
                {% block main %}{% endblock main %}
            </div>

            <div id="sidebar" class="col-sm-3">
                {% block sidebar %}{{ render(controller('AppBundle:Blog:sidebar')) }}{% endblock sidebar %}
            </div>
        </div>
    {% endblock body %}
</div>

{% block footer %}
    <footer>
        <div class="container">
            <div class="row">
                <div id="footer-copyright" class="col-md-6">
                    <p>&copy; {{ 'now'|date('Y') }} - My blog</p>

                    <p>All right protected</p>
                </div>
            </div>
        </div>
    </footer>
{% endblock %}

{% block javascripts %}
    <script src="{{ asset('js/app.js') }}"></script>
{% endblock javascripts %}

</body>
</html>
