{% extends 'admin/layout.html.twig' %}

{% block main %}
    <h1>New post</h1>

    {{ form_start(form) }}
        {{ form_row(form.title) }}
        {{ form_row(form.shortText) }}
        {{ form_row(form.content) }}
        {{ form_row(form.tags) }}

        <input type="submit" value="Create post" class="btn btn-primary" />

        {{ form_widget(form.saveAndCreateNew, { label: 'Save and create new'|trans, attr: { class: 'btn btn-primary' } }) }}

        <a href="{{ path('admin_post_index') }}" class="btn btn-primary">
            Back to list
        </a>
    {{ form_end(form) }}
{% endblock %}

{% block sidebar %}

{% endblock %}
