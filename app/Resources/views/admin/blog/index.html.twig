{% extends 'admin/layout.html.twig' %}
{% block main %}
    <h1>Posts</h1>
    <table class="table table-striped">
        <thead>
        <tr>
            <th>Title</th>
            <th>Foto</th>
            <th><i class="fa fa-calendar"></i>Created at</th>
            <th><i class="fa fa-cogs"></i>Actions</th>
        </tr>
        </thead>
        <tbody>
        {% for post in pagination %}
            <tr>
                <td>{{ post.title }}</td>
                <td>
                    {% if post.foto %}
                        <img class="img-responsive"
                             src={{ asset("#{post.foto}") | imagine_filter('my_admin') }} alt="foto"
                             style="float: left">
                    {% endif %}
                </td>
                <td>{{ post.created.date|date("d F Y H:i:s") }}</td>
                <td>
                    <div class="item-actions">
                        <a href="{{ path('admin_post_show', { slug: post.slug }) }}" class="btn btn-sm btn-default">
                            Show post </a>
                        <a href="{{ path('admin_post_edit', { slug: post.slug }) }}" class="btn btn-sm btn-primary">
                            <i class="fa fa-edit"></i> Edit post </a>
                    </div>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    <div class="navigation">
        {{ knp_pagination_render(pagination) }}
    </div>
{% endblock %}
{% block sidebar %}
    <div class="section actions">
        <a href="{{ path('admin_post_new') }}" class="btn btn-lg btn-block btn-success">
            <i class="fa fa-plus"></i> Create post </a>
        <a href="{{ path('admin_tag_new') }}" class="btn btn-lg btn-block btn-success">
            <i class="fa fa-plus"></i> Create tag </a>
    </div>
{% endblock %}
