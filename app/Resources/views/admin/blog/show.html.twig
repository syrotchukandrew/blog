{% extends 'admin/layout.html.twig' %}

{% block body_id 'admin_post_show' %}

{% block main %}
    <h1>{{ post.title }}</h1>
    <p>{% for i in 1..post.rating|round %}
            <span class="glyphicon glyphicon-star"></span>
        {% endfor %}
        Ratting {{ post.rating|round(1) }}</p>
    <p><span class="glyphicon glyphicon-time"></span> Posted on {{ post.created.date|date("d F Y H:i:s") }} </p>

    <table class="table">
        <tbody>
            <tr>
                <th>Short text</th>
                <td>{{ post.shortText }}</td>
            </tr>
            <tr>
                <th>Content</th>
                <td>{{ post.content }}</td>
            </tr>
            <tr>
                <th>Tags</th>
                <td><p>
                        {% for tag in post.tags %}
                        {{ tag.getTitle }} </p>
                    {% endfor %}

                </td>
            </tr>

        </tbody>
    </table>
{% endblock %}

{% block sidebar %}
    <div class="section">
        <a href="{{ path('admin_post_edit', { slug: post.slug }) }}" class="btn btn-lg btn-block btn-success">
            <i class="fa fa-edit"></i> Edit post
        </a>
    </div>

    <div class="section">
        {{ include('admin/blog/_form.html.twig', {
            form: delete_form,
            button_label: 'Delete',
            button_css: 'btn btn-lg btn-block btn-danger',
            show_confirmation: true,
        }, with_context = false) }}
    </div>
{% endblock %}
